# Top-level makefile for TD_LIB common library

SHELL		= /bin/sh
@SET_MAKE@

####### (Development) ##########################################################

TOP		= .
THIS		= td_lib
THAT		= libtd
@MAKE_SELFLINK@SELFLINK	= ../td_lib

prefix		= @prefix@
exec_prefix	= @exec_prefix@
includedir	= @includedir@
bindir		= @bindir@
libdir		= @libdir@
srcdir		= @srcdir@

my_incdir	= $(DESTDIR)$(includedir)/td
my_libdir	= $(DESTDIR)$(libdir)

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@
RANLIB		= @RANLIB@

I_CFG		= include/td_config.h
MDEFN		= support/td_lib.mk
I_LIST		= `cat $(srcdir)/include/headers`
MAKE_OPTS	= @cf_cv_makeflags@

CC		= @CC@
RM		= -rm -f
CLEAN		= *.bak *.log *.out *.tst .nfs* core
PURE		= config_h *.cache *.status $(I_CFG) $(MDEFN)

####### (Standard Lists) #######################################################
CONFIG_H=\
	aclocal.m4\
	configure.in

SOURCES	=\
	td_make.in\
	descrip.mms\
	README\
	COPYING\
	$(CONFIG_H)

MFILES	=\
	include/Makefile\
	support/Makefile

####### (Standard Productions) #################################################
all\
lintlib\
install::	$(SELFLINK) lib $(I_CFG) $(MDEFN)

clean\
clobber ::	td_make.in
	$(SHELL) -c "if test ! -f $(MDEFN);\
		then sed -e's/^MAKE.*/MAKE=make/' td_make.in >$(MDEFN);\
		fi"
all\
clean\
clobber\
run_test\
sources\
lint.out ::	$(MFILES)
	cd support &&	$(MAKE) $(MAKE_OPTS) $@
	cd include &&	$(MAKE) $(MAKE_OPTS) $@
	cd src &&	$(MAKE) $(MAKE_OPTS) $@
	cd test &&	$(MAKE) $(MAKE_OPTS) $@

lintlib ::	$(MFILES)
	cd include &&	$(MAKE) $(MAKE_OPTS) $@

all\
sources ::	$(SOURCES)

clean \
clobber ::			; $(RM) $(CLEAN)
clobber ::			; $(RM) -r lib

distclean:	clobber
	-cd src &&	$(MAKE) $(MAKE_OPTS) $@
	-cd test &&	$(MAKE) $(MAKE_OPTS) $@
	-$(RM) $(PURE)
	-$(RM) makefile src/makefile test/makefile
	-$(RM) $(SELFLINK)

install::	all $(bindir) $(my_incdir) $(my_libdir)
	$(srcdir)/support/ins_hdr "$(INSTALL_DATA)" "$(DESTDIR)" $(my_incdir) $(I_LIST)
	$(srcdir)/support/ins_mak "$(INSTALL_DATA)" "$(DESTDIR)" $(my_libdir) $(my_incdir) support/$(THIS).mk
	$(INSTALL_DATA) lib/$(THAT).a $(my_libdir)
	$(RANLIB) $(my_libdir)/$(THAT).a

uninstall::
	$(srcdir)/support/rem_hdr $(my_incdir) $(I_LIST)
	$(RM) $(my_libdir)/$(THIS).mk
	$(RM) $(my_libdir)/$(THAT).a

####### (Details of Productions) ###############################################
$(bindir) \
$(my_incdir) \
$(my_libdir) \
lib:					; mkdir -p $@
$(SOURCES):

@MAKE_SELFLINK@$(SELFLINK):				; $(SHELL) $(srcdir)/support/selflink.sh
